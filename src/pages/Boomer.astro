---

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

import Footer from "../components/Footer.astro";
import GbBoomer from "@/components/gunbound/GbBoomer.astro";

import App from "@/components/App";

---

<Layout title="GunBound 2003 - Turtle">
    <Header />
    <div class="main-content">
        <GbBoomer />
       
    </div>
    <App client:load />
    <Footer />

    <style>
        .main-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
            padding: 2rem;
        }
    </style>
</Layout>
