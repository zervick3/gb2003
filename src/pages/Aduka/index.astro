---

import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";

import Footer from "@/components/Footer.astro";

import App from "@/components/App";

import AdukaAngle from "@/components/AdukaAngle.astro";
import CardAvatares from "@/components/CardAvatares.astro";
---

<Layout title="GunBound 2007">
    <Header />
    <div class="main-content">
        <AdukaAngle />
    </div>
    <CardAvatares/>
    <App client:load />

    <Footer />
    <style>
        .main-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
            padding: 2rem;
        }
    </style>
</Layout>
