                data[sd] &&
                data[sd][category] &&
                Object.prototype.hasOwnProperty.call(data[sd][category], key)
            ) {
                const value = data[sd][category][key];

                displayValue =
                    value === null || value === undefined
                        ? "N/A"
                        : value.toString();
            }
        }

        valueDisplay.textContent = displayValue;
    }

