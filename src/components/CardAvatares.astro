---
import avatares from "@/data/json/avatares.json";
---

<div class="containerbody">
  <h1>Avatares Gunbound Latino</h1>

  <div class="scroll-wrapper">
    <button class="scroll-btn" id="btn-left">
      <img
        src="https://img.icons8.com/ios-filled/50/000000/chevron-left.png"
        alt="Left"
      />
    </button>

    <div class="scroll-container" id="scroll-container">
      {
        avatares.map((avatar) => (
          <div class="card">
            <div class="card-item" data-id={avatar.id}>
              <img src={avatar.image} alt={avatar.name} />
              <div class="card-name">{avatar.name}</div>
            </div>
          </div>
        ))
      }
    </div><button class="scroll-btn" id="btn-right">
      <img
        src="https://img.icons8.com/ios-filled/50/000000/chevron-right.png"
        alt="Right"
      />
    </button>
  </div>
  <style>
    .containerbody {
      margin: 0;
      padding: 40px 20px;
      background: linear-gradient(180deg, #1a1a2e, #16213e);
      font-family: "Poppins", sans-serif;
      overflow-x: hidden;
    }

    h1 {
      text-align: center;
      color: #ffd700;
      margin-bottom: 30px;
      text-shadow: 0 0 10px #ffd700;
      font-size: 2.5rem;
    }

    .scroll-wrapper {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      overflow: hidden;
    }

    .scroll-btn {
      background: linear-gradient(145deg, #ffd700, #ffcc00);
      border: none;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 0 10px #ffd700;
      cursor: pointer;
      text-decoration: none;
      transition:
        transform 0.3s,
        box-shadow 0.3s;
    }

    .scroll-btn:hover {
      transform: scale(1.2);
      box-shadow: 0 0 20px #ffd700;
    }

    .scroll-btn img {
      width: 24px;
      height: 24px;
    }

    .scroll-container {
      display: flex;
      overflow-x: auto;
      scroll-behavior: smooth;
      scroll-snap-type: x mandatory;
      scroll-snap-stop: always;
      gap: 20px;
      padding: 20px;
      border: 2px solid #ffd700;
      border-radius: 20px;
      background: linear-gradient(145deg, #252552, #393980);
      max-width: 100%;
    }

    .card {
      flex: 0 0 auto;
      width: 180px;
      height: 260px;
      background: linear-gradient(145deg, #2f2f65, #4545a0);
      border-radius: 20px;
      box-shadow:
        0 8px 16px rgba(0, 0, 0, 0.6),
        0 0 10px #7c4dff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      padding: 15px;
      scroll-snap-align: center;
      text-align: center;
      transition:
        transform 0.4s,
        box-shadow 0.4s;
      scroll-margin: 20px;
    }

    .card:hover {
      transform: scale(1.1) rotate(-2deg);
      box-shadow:
        0 12px 24px rgba(0, 0, 0, 0.8),
        0 0 15px #ffd700;
    }

    .card img {
      width: 100%;
      height: 160px;
      object-fit: contain;
      border-radius: 12px;
      background: #fff;
      padding: 5px;
    }

    .card-name {
      margin-top: 10px;
      font-size: 1rem;
      font-weight: bold;
      color: #ffd700;
      text-shadow: 0 0 5px #7c4dff;
    }

    /* Scrollbar bonito */
    .scroll-container::-webkit-scrollbar {
      height: 8px;
    }

    .scroll-container::-webkit-scrollbar-track {
      background: #2c2c54;
      border-radius: 10px;
    }

    .scroll-container::-webkit-scrollbar-thumb {
      background: #ffd700;
      border-radius: 10px;
      box-shadow: inset 0 0 5px #000;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .card {
        width: 150px;
        height: 220px;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 2rem;
      }
      .card {
        width: 130px;
        height: 200px;
      }
    }
  </style>

  <script>
    const scrollContainer = document.getElementById(
      "scroll-container",
    ) as HTMLElement | null;
    const btnLeft = document.getElementById(
      "btn-left",
    ) as HTMLButtonElement | null;
    const btnRight = document.getElementById(
      "btn-right",
    ) as HTMLButtonElement | null;

    const cardWidth = 200; // Ancho de cada card mÃ¡s el gap aprox

    if (scrollContainer && btnLeft && btnRight) {
      btnLeft.addEventListener("click", () => {
        scrollContainer.scrollBy({
          left: -cardWidth,
          behavior: "smooth",
        });
      });

      btnRight.addEventListener("click", () => {
        scrollContainer.scrollBy({
          left: cardWidth,
          behavior: "smooth",
        });
      });
    }
  </script>
</div>
