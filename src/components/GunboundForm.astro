<div class="container">
    <h2 class="float">GunBound 2004 - Triko Calculador</h2>
    <input
        type="number"
        id="numeroInput"
        placeholder="Ingresa una posición (1-40)"
        min="1"
        max="40"
    />
    <select class="Direction" id="direccionSelect">
